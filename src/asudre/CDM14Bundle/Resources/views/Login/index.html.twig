<!DOCTYPE HTML>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<link rel="stylesheet" href="{{asset('bundles/asudre/css/cds') }}" type="text/css" />
    <title>CDM14 - Authentificatio</title>
  </head>
	
	<body>

		{% include "asudreCDM14Bundle::analyticstracking.html.twig" %}
	
		<form action="{{ path('asudre_authentification') }}" method="POST">
		
			<div id="authentification">
				<table>
					<tr>
						<td>
							Identifiant<span id="asterisque">*</span> :
						</td>
						<td>
							<input class="input" name="utilisateur" type="text" value="{{ app.user.username }}"/>
						</td>
					</tr>
					<tr>
						<td>
							Mot de passe<span id="asterisque">*</span> :
						</td>
						<td>
							<input class="input" name="motDePasse" type="password" />
						</td>
					</tr>
					<tr>
						<td id="erreur" colspan="2">
							<!-- <c:if test="${trouve == false}">Le mot de passe ou l'identifiant est incorrect.</c:if> -->
							<!-- <c:if test="${inscrit == true}">Vous �tes inscrit, vous pouvez maintenant vous identifier.</c:if> -->
						</td>
					</tr>
					<tr>
						<td align="right">
							<input id="cookie" name="cookie" type="checkbox" />
						</td>
						<td>
							<label for="cookie">Rester connecté</label>
						</td>
					</tr>
					<tr>
						<td></td>
						<td>
							<input type="hidden" value="${idInvitation}" name="idInvitation" />
							<input type="submit" value="Valider"/>
						</td>
					</tr>
				</table>
			</div>
		</form>
	
	</body>

	{% include "asudreCDM14Bundle::piedDePage.html.twig" %}

</html>